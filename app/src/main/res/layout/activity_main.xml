<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/back"
    tools:context=".LoginActivity">
    <LinearLayout
        android:id="@+id/sparks_logo"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:layout_above="@id/lay2"
        android:gravity="center"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/logo"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_centerHorizontal="true"
            android:rotation="0"
            android:rotationX="0"
            android:rotationY="0"
            android:src="@drawable/logo" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:id="@+id/lay2"
        android:layout_height="282dp"
        android:layout_above="@+id/lay1"
        android:layout_marginBottom="50dp"
        android:gravity="center"
        android:orientation="vertical">

        <Button
            android:id="@+id/gmaillogin_button"
            android:layout_width="230dp"
            android:layout_height="35dp"
            android:layout_gravity="center_horizontal|center_vertical"
            android:layout_margin="15dp"
            android:background="@drawable/gmail_background_button"
            android:baselineAligned="false"
            android:drawableLeft="@drawable/google_logo"
            android:gravity="center"
            android:paddingHorizontal="5dp"

            android:paddingStart="10dp"
            android:paddingLeft="10dp"
            android:text="Sign In with Google"
            android:textAllCaps="false"
            android:textColor="#000"
            android:textSize="15sp"
            android:textStyle="bold"></Button>

        <Button
            android:id="@+id/fblogin_button"
            android:layout_width="230dp"
            android:layout_height="35dp"
            android:layout_gravity="center_horizontal|center_vertical"
            android:layout_marginBottom="15dp"
            android:background="@drawable/rounded_button"
            android:drawableLeft="@drawable/fb_logo"
            android:gravity="center_horizontal|center_vertical"
            android:paddingHorizontal="5dp"

            android:text="Sign In with Facebook"
            android:textAllCaps="false"
            android:textColor="#fff"
            android:textSize="15sp"
            android:textStyle="bold"></Button>


        <TextView
            android:id="@+id/link_texts"
            android:layout_width="match_parent"
            android:layout_marginStart="15dp"
            android:layout_marginEnd="15dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:gravity="center_horizontal"
            android:textColor="@color/white"
            android:fontFamily="@font/aldrich"
            android:text="By clicking on login, you are accepting our \privacy policy and terms &amp; conditions."
            android:textSize="13sp"
            android:layout_marginLeft="15dp"></TextView>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/lay1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="1dp"
        android:layout_marginRight="1dp"
        android:layout_marginBottom="40dp"
        android:gravity="center_horizontal"
        android:orientation="horizontal">



        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:text="@string/_2021copywrite"
            android:textColor="@color/white"
            android:fontFamily="@font/aldrich"
            android:textStyle="bold"
            android:textSize="14sp"></TextView>
        <TextView
            android:id="@+id/name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/aldrich"
            android:text="  DIDDI MANOJ KUMAR"
            android:textColor="#fff"
            android:textCursorDrawable="@color/com_facebook_blue"
            android:textSize="15sp"
            android:textStyle="bold"
            android:visibility="visible"></TextView>
    </LinearLayout>

</RelativeLayout>